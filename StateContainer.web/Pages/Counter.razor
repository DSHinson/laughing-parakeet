@page "/counter"
@using StateContainer.services
@inject ICounterService counterService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="() =>{IncrementCount(1);}">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount(int amountToIncrease)
    {
        currentCount = counterService.incrementValue(currentCount,amountToIncrease);
    }
}
